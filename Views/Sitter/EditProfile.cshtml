@model PetSitter.ViewModels.SitterProfileVM
@{
    ViewData["Title"] = "EditProfile";
}

<h2 class="text-uppercase">Welcome @Model.FirstName!</h2>
<h3 class="font-monospace" style="color:grey; font-weight:bold; font-size:1.4em;">Update your profile and add your pet!</h3>

<div class="container-fluid editprofile-container">
    <hr />
    <div class="mt-3 mb-3 back-to-profile font-monospace lead" style="font-size:large;">
        <a asp-action="Profile" class="back-link">
            <span class="arrow"></span>
            <span class="text text-lg-start mt-2">Back to Profile</span>
        </a>
    </div>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditProfile" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId"/>
            <input type="hidden" asp-for="SitterId" />

            <input type="hidden" asp-for="UserType"/>
                <div class="mb-3">
                    <h3 class="font-monospace">Profile Image</h3>
                    <div class="form-group">
                        <div class="input-group">
                            <input asp-for="ProfileImage" class="form-control" type="file">
                        </div>
                        <span asp-validation-for="ProfileImage" class="text-danger"></span>
                    </div>
                </div>
            <div class="row">

            <div class="form-group">
                    <label asp-for="ProfileBio" class="control-label"></label>

                    <textarea asp-for="ProfileBio" rows="3" class="form-control" autocomplete="username" aria-required="true"></textarea>
                    <span asp-validation-for="ProfileBio" class="text-danger"></span>

                </div>
            </div>

                <div class="mb-3">
                    <h3 class="font-monospace">Contact Details</h3>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="FirstName" class="col-form-label lead">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="LastName" class="col-form-label lead">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="Email" class="col-form-label lead">Email</label>
                            <input asp-for="Email" class="form-control" readonly="readonly" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="PhoneNumber" class="col-form-label lead">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <h3 class="font-monospace">Postal Address</h3>

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="StreetAddress" class="form-label lead">Street Address</label>
                            <input asp-for="StreetAddress" class="form-control" />
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="City" class="form-label lead">City</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="col-sm-12">
                            <label asp-for="PostalCode" class="form-label lead">Postal Code</label>
                            <input asp-for="PostalCode" class="form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            <div class="row">
                <h3>Pet preferences</h3>
            <div class="form-group">
                <h6> What type of pets do you accept?</h6>

                <label for="SelectedPetTypes" class="control-label"></label>
                @foreach (var petType in Model.PetTypesAvailable)
                {
                    <input class="form-check-input" type="checkbox" name="SelectedPetTypes" value="@petType"
                       @(Model.SelectedPetTypes.Contains(petType) ? "checked" : "")>
                    <label class="form-check-label">@petType</label>
                }
            </div>
           

                <div class="form-group">
                        <label >Rate Per Pet Per Day</label>
                    <input asp-for="RatePerPetPerDay" type="text" class="form-control" autocomplete="username" aria-required="true"  />
                    <span asp-validation-for="RatePerPetPerDay" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
