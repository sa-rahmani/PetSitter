<style>
    .percentage-bar {
        display: inline-block;
        width: 150px;
        height: 15px;
        background-color: lightgray;
        margin: 0 5px;
        position: relative;
    }

    .percentage-bar-inner {
        display: block;
        width: 0;
        height: 100%;
        background-color: #deb217;
        position: absolute;
        top: 0;
        left: 0;
    }
    .starDetail{
                 font-size: 0.8em;

    }
