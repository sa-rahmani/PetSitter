  }
</style>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $(".percentage-bar-inner").on("click", function() {
            var rating = $(this).data("rating");
            $.ajax({
                url: '@Url.Action("SitterDetails", "Booking")',
                type: "POST",
                data: { sitterID: @ViewBag.SitterID,
                    rating: rating },
                success: function(result) {
                    console.Log(result)
                },
                error: function(error) {
                   ('There was an error filtering.');
                }
            });
        });
    });
</script>
}

@functions {
    public string IsStarSelected(int star, double? rating)
    {
        if (star <= rating)
        {
            return "highlight";
        }
        else
        {
            return "no-highlight";
        }
    }
}



@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}


<a asp-action="SitterDetails"
   asp-route-page="@(Model.PageIndex - 1)"
   asp-route-sitterID="@ViewBag.SitterID"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="SitterDetails"
   asp-route-page="@(Model.PageIndex + 1)"
   asp-route-sitterID="@ViewBag.SitterID"
   class="btn btn-default @nextDisabled">
    Next
</a>




